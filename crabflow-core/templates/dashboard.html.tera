<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | CrabFlow</title>
    <link rel="stylesheet" href="/static/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="dashboard">
        <header class="topbar">
            <div class="logo">
                <h1>{{ title }}</h1>
                <span class="badge">{{ hostname }}</span>
            </div>
            <div class="theme-switcher">
                <button id="theme-toggle">Toggle Theme</button>
                <button id="settings">Settings</button>
            </div>

        </header>

        <main class="grid">
            <section class="card card-system">
                <h3>System</h3>
                <dl class="kv">
                    <div><dt>OS</dt><dd>{{ os }}</dd></div>
                    <div><dt>CPU</dt><dd>{{ cpu }}</dd></div>
                    <div><dt>Memory</dt><dd>{{ memory }}</dd></div>
                </dl>
                <h3>System Logs</h3>
                <div class="log-container">
                    <pre id="log-output"></pre>
                </div>
            </section>

            <section class="card card-interfaces">
                <h3>Network Interfaces</h3>
                <ul class="iflist">
                    {% for iface in interfaces %}
                    <li>
                        <span class="iflist-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect><rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect><line x1="6" y1="6" x2="6.01" y2="6"></line><line x1="6" y1="18" x2="6.01" y2="18"></line></svg>
                        </span>
                        <code>{{ iface }}</code>
                    </li>
                    {% endfor %}
                </ul>
            </section>

            <section class="card card-actions">
                <h3>Actions</h3>
                <div class="action-buttons">
                    <button id="refresh">Refresh</button>
                    <button id="run-diagnostic">Run Diagnostic</button>
                    <button id="restart">Restart</button>
                    <button id="shutdown">Shutdown</button>
                </div>
            </section>
            <section class="card card-actions">
                <h3>Domain Actions</h3>
                <div class="action-buttons">
                    <button id="setup-wizard">Setup Wizard</button>
                    <button id="dhcp-server">DHCP Server</button>
                    <button id="device-manager">Device Manager</button>
                    <button id="acl">ACL</button>
                    <button id="network-config">Network Configuration</button>
                </div>
            </section>

            <section class="card card-actions">
                <h3>Traffic Monitor</h3>
                <div class="action-buttons">
                    <pre id="traffic-monitor">
                        <div id="traffic-chart">
                            <h3>Summary</h3>
                            <iframe src="/traffic-chart.html" width="100%" height="400px"></iframe>
                        </div>
                    </pre>
                </div>
            </section>
        </main>
    </div>

    <script src="/static/dashboard.js"></script>
</body>
</html>
