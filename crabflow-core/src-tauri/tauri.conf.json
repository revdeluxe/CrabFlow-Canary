{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CrabFlow Router",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../templates",
    "devUrl": "http://localhost:8000",
    "beforeDevCommand": "cargo run --manifest-path ./Cargo.toml",
    "beforeBuildCommand": "cargo build"
  },
  "app": {
    "windows": [
      {
        "title": "CrabFlow",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
