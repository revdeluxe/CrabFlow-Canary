{
  "name": "crabflow",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "vite dev -- --host",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "npm-run-all --parallel dev:vite dev:tauri-wait",
    "dev:vite": "vite dev --host",
    "dev:tauri-wait": "node scripts/wait-and-run.js",
    "tauri:dev:linux": "npm-run-all --parallel dev:vite dev:tauri-linux",
    "tauri:dev:macos": "npm-run-all --parallel dev:vite dev:tauri-macos",
    "tauri:dev:windows": "npm-run-all --parallel dev:vite dev:tauri-windows",
    "dev:tauri-linux": "sleep 2 && sudo ./src-tauri/target/debug/crabflow",
    "dev:tauri-macos": "sleep 2 && sudo ./src-tauri/target/debug/crabflow",
    "dev:tauri-windows": "timeout /t 2 && .\\src-tauri\\target\\debug\\crabflow.exe",
    "tauri:build": "npm run build && tauri build",
    "cargo:build": "cd src-tauri && cargo build",
    "cargo:build:release": "cd src-tauri && cargo build --release"
  },
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "@popperjs/core": "^2.11.8",
    "@tauri-apps/api": "^2.0.0-beta.21",
    "@tauri-apps/plugin-opener": "^2.0.0-beta.8",
    "admin-lte": "^4.0.0-rc6",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.3"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tauri-apps/cli": "^2.0.0-beta.21",
    "npm-run-all": "^4.1.5",
    "svelte": "^5.0.0-next.200",
    "svelte-check": "latest",
    "typescript": "~5.5.4",
    "vite": "^7.3.1"
  }
}
